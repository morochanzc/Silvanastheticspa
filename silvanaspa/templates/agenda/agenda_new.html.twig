{% extends "base.html.twig" %}
{% block body %}
  <div class="container-fluid">
    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Registro de agendas</h1>
    {% for mensaje in app.session.flashbag().get('mensaje') %}
      {% for tipomensaje in app.session.flashbag().get('tipomensaje') %}
        <div class="alert alert-{{ tipomensaje }}">
          {{ mensaje }}
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
      {% endfor %}
    {% endfor %}
    <!-- BEGIN FORM-->
    <form action="{{ path('agenda_new') }}" class="form-horizontal" method="post">  
      <div class="row">
        <div class="col-xl-6 col-lg-5">
          <div class="card shadow mb-4">
            <div class="clearfix"></div>
            <div class="card-body">
              {{ form_errors(form) }}
              <div>
                  {{ form_label(form.nombre) }}
                  {{ form_widget(form.nombre) }}
                  {{ form_label(form.descripcion) }}
                  {{ form_widget(form.descripcion) }}
                  {{ form_widget(form) }}   
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="form-actions">
          <input class="btn btn-success" type="submit" value="Registrar" />
          <a href="{{path("agenda_list")}}" class="btn btn-secondary btn-icon-split">
            <span class="icon text-white-50">
              <i class="fas fa-arrow-left"></i>
            </span>
            <span class="text">Cancelar</span>
          </a>
      </div>
    </form>
    <!-- END FORM-->
  </div>
{% endblock body %}
