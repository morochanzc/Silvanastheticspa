  <script>
  $(function () {
    $('[data-toggle="tooltip"]').tooltip();

    $('.timepicker-default').timepicker({
        defaultTime: '',
        disableFocus: false,
        disableMousewheel: false,
        isOpen: false,
        minuteStep: 15,
        modalBackdrop: false,
        orientation: { x: 'auto', y: 'auto'},
        secondStep: 15,
        snapToStep: false,
        showSeconds: false,
        showInputs: true,
        showMeridian: false,
        template: 'dropdown',
        appendWidgetTo: 'body',
        showWidgetOnAddonClick: true,
        maxHours: 24,
        explicitMode: false,
        autoclose: true,
        icons: {
              up: 'fas fa-angle-up',
              down: 'fas fa-angle-down'
            }
      });
      $('#HoraInicio').on('change', function() {
          var hora = document.getElementById("HoraInicio").value;
      });
    })
  </script>

